@model List<Dish>

<a href="/dishes/new">Create a new dish!</a>
<h1>Yum, take a look at our tasty Dishes!</h1>

<div class="container">
    <table class="table">
        <tr class="table">
            <th class="table">Name</th>
            <th class="table">Chef</th>
            <th class="table">Tastiness</th>
            <th class="table">Calories</th>
        </tr>
        @foreach (Dish dish in Model)
        {
            <tr class="table">
                <td class="table">@dish.Name</td>
                <td class="table">@dish.Creator.FirstName @dish.Creator.LastName</td>
                <td class="table">@dish.Tastiness</td>
                <td class="table">@dish.Calories</td>
            </tr>
        }
    </table>
